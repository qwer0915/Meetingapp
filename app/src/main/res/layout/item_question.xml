<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView android:id="@+id/textSubject" android:layout_width="0dp"
        android:maxLines="1" android:textSize="14sp"
        android:ellipsize="end"
        android:layout_height="wrap_content" android:layout_weight="2" />
    <TextView android:id="@+id/textAuthor"  android:layout_width="0dp"
        android:maxLines="1" android:textSize="14sp"
        android:ellipsize="end"
        android:layout_height="wrap_content" android:layout_weight="1"/>
    <TextView android:id="@+id/textDate"  android:layout_width="0dp"
        android:maxLines="1"
        android:ellipsize="end"        android:textSize="14sp"
        android:layout_height="wrap_content" android:layout_weight="1"/>
</LinearLayout>